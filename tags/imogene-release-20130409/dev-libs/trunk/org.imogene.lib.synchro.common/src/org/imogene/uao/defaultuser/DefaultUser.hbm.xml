<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class lazy="false" table="DefaultUser"	name="org.imogene.uao.defaultuser.DefaultUser" >
	
		<id column="User_Id" name="id" />
		<property column="User_LastModificationDate" name="modified" type="timestamp"/>
		<property column="User_UploadDate" name="uploadDate" type="timestamp"/>
		<property column="User_Modifier" name="modifiedBy"/>	
		<property column="User_ModifiedFrom" name="modifiedFrom"/>	
		<property column="User_CreationDate" name="created" type="timestamp"/>	
		<property column="User_Creator" name="createdBy"/>	
		
		<property column="User_Login" name="login" />
		<property column="User_Password" name="password" />	
						
		<set lazy="false" name="roles" table="Roles">
			<key column="User_Id"/>
			<many-to-many class="org.imogene.uao.role.Role" column="Role_Id"/>
		</set>		
			
		<set lazy="false" name="synchronizables" table="User_Synchronizables">
			<key column="User_Id"/>
			<many-to-many class="org.imogene.uao.synchronizable.SynchronizableEntity" column="Synchronizable_Id"/>
		</set>	
	
			
	</class>
</hibernate-mapping>
